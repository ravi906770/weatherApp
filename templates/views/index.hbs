<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}


    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left side div -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p class="prg">Welcome To My Weather App</p>
                        <h1 class="h">Get The Latest <span id="w">Weather</span> Information Of Your City</h1>
                        <a href="/weather"><button class="b">Check Now</button></a>
                    </div>
                    <!-- right side div  -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class=" w-100" src="./imeges/winter.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class=" w-100" src="./imeges/summer.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class=" w-100" src="./imeges/um.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer code  -->
   {{>footer}}

</body>

</html>